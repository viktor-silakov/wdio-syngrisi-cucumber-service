{
  "name": "wdio-syngrisi-cucumber-service",
  "version": "2.0.0",
  "description": "WDIO Service for Syngrisi visual tests using Cucumber",
  "main": "dist/index.js",
  "np": {
    "releaseDraft": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:viktor-silakov/wdio-syngrisi-cucumber-service.git"
  },
  "bugs": {
    "url": "https://github.com/viktor-silakov/wdio-syngrisi-cucumber-service/issues"
  },
  "scripts": {
    "pub": "run-s install:global clean compile; np",
    "build": "run-s clean compile",
    "clean": "rimraf ./dist",
    "compile": "babel src/ -d dist/ --config-file ./babel.config.js",
    "test": "vitest run",
    "test:unit": "vitest run",
    "e2e": "node scripts/run-e2e.js",
    "install:local": "npm rm @syngrisi/wdio-sdk && npm install -S ../syngrisi-sdk",
    "install:global": "npm rm @syngrisi/wdio-sdk && npm install -S @syngrisi/wdio-sdk"
  },
  "keywords": [
    "wdio-plugin",
    "wdio-service",
    "syngrisi"
  ],
  "author": "Viktar Silakou",
  "license": "MIT",
  "engines": {
    "node": ">=22.19.0"
  },
  "devDependencies": {
    "@babel/cli": "7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-function-bind": "7.27.1",
    "@babel/plugin-proposal-optional-catch-binding": "7.18.6",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/register": "^7.28.3",
    "@syngrisi/syngrisi": "^3.1.3",
    "@wdio/cli": "9.22.0",
    "@wdio/cucumber-framework": "9.22.0",
    "@wdio/local-runner": "9.22.0",
    "@wdio/spec-reporter": "9.20.0",
    "babel-plugin-source-map-support": "^2.2.0",
    "chromedriver": "^143.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "npm-run-all": "^4.1.5",
    "vitest": "^4.0.16",
    "mongodb": "^6.10.0"
  },
  "dependencies": {
    "@syngrisi/wdio-sdk": "^3.1.3",
    "faker": "^5.5.3",
    "pino": "^9.0.0",
    "rimraf": "^3.0.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
